{
  "name": "bitcoin-price-ticker",
  "description": "Adds price tickers for Bitcoin and many other cryptocurrencies",
  "version": "12",
  "manifest_version": 2,
  "background": {
    "scripts": ["main.js"]
  },
  
  "content_scripts": [
    {
      "matches": ["*://*.mozilla.org/*"],
      "js": ["main.js"]
    }
  ],

  "browser_action": {
    "browser_style": true,
    "default_icon": "icon.png",
    "default_title": "button label",
    "default_popup": "popup.html"
  }
}